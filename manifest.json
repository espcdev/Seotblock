{
  "manifest_version": 3,
  "name": "Seotblock",
  "version": "2.0",
  "description": "El Adblock para YouTube que neutraliza anuncios a nivel de red y acelera los restantes.",
  "permissions": [
    "storage",
    "scripting",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
"content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
